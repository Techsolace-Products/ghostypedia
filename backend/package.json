{
  "name": "ghostypedia-backend",
  "version": "1.0.0",
  "description": "Backend API for Ghostypedia - AI-powered encyclopedia of ghosts and paranormal entities",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit",
    "migrate:up": "ts-node src/scripts/migrate.ts up",
    "migrate:down": "ts-node src/scripts/migrate.ts down",
    "migrate:to": "ts-node src/scripts/migrate.ts to",
    "migrate:status": "ts-node src/scripts/migrate.ts status",
    "migrate:reset": "ts-node src/scripts/migrate.ts reset",
    "seed": "ts-node src/scripts/seed.ts seed",
    "seed:clear": "ts-node src/scripts/seed.ts clear",
    "seed:reset": "ts-node src/scripts/seed.ts reset"
  },
  "keywords": [
    "ghostypedia",
    "api",
    "express",
    "typescript",
    "postgresql",
    "redis"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "imagekit": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-validator": "^2.20.33",
    "@types/helmet": "^0.0.48",
    "@types/imagekit": "^3.1.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.15.6",
    "@types/redis": "^4.0.10",
    "@types/uuid": "^10.0.0",
    "fast-check": "^4.3.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
